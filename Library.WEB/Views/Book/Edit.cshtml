
@model Library.ViewModels.Models.BookViewModel

@{
    ViewBag.Title = "Edit";
}

<h2> @Model.Name</h2>
@using (Html.BeginForm("Edit", "Book", FormMethod.Post, new { enctype = "multipart/form-data" }))
{


    @Html.ValidationSummary(true)

    <fieldset>
        @Html.HiddenFor(m => m.BookId)
        <p>
            @Html.LabelFor(m => m.Name, "Book")
            <br />
            @Html.EditorFor(m => m.Name, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.Name)
        </p>
        <p>
            @Html.LabelFor(m => m.AuthorName, "Author")
            <br />
            @Html.EditorFor(m => m.AuthorName, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.AuthorName)
        </p>
        <p>
            @Html.LabelFor(m => m.YearOfPublishing, "Year")
            <br />
            @Html.EditorFor(m => m.YearOfPublishing, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.YearOfPublishing)
        </p>

        @Html.Label("Publication Houses", new { @class = "control-label" })
        <select name="PubHouses" id="multiselect" style="width:200px"></select>

        <input type="hidden" value="@Json.Encode(Model.PublicHouses.ToArray())" id="houses" />
        <script src="~/Scripts/app/book/multiSelectEdit.js"></script>

        <br /><br />


        <p><input type="submit" value="Save" class="btn btn-secondary" /></p>
    </fieldset>
}
